<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.eventinapp">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.SubscriptionActivity"></activity>
        <activity
            android:name=".activity.PopUpActivity"
            android:theme="@style/AppTheme.CustomTheme" />
        <activity android:name=".activity.DetailHistoryActivity" />
        <activity android:name=".activity.EditProfileActivity" />
        <activity android:name=".activity.ChooseEventMakeActivity" />
        <activity android:name=".activity.MakeOfferUploadActivity" />
        <activity android:name=".activity.AcceptUploadActivity" />
        <activity android:name=".activity.ChooseEventAccActivity" />
        <activity android:name=".activity.Notification" />
        <activity android:name=".activity.DescOfferActivity" />
        <activity android:name=".activity.CreateEventActivity" />
        <activity android:name=".activity.RegisterActivity" />
        <activity android:name=".activity.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.BottomNavActivity"
            android:label="@string/title_activity_bottom_nav" />
        <activity
            android:name=".activity.MainActivity"
            android:windowSoftInputMode="adjustPan">

        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>