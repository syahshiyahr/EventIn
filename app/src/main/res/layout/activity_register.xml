<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.RegisterActivity"
    android:background="@drawable/login">

    <TextView
        android:id="@+id/create_an_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="75dp"
        android:text="@string/create_an_a"
        android:textAppearance="@style/create_an_a"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:fontFamily="@font/montserrat_bold"
        />

    <TextView
        android:id="@+id/nama_lengkap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="58dp"
        android:layout_marginTop="153dp"
        android:fontFamily="@font/montserrat"
        android:gravity="top"
        android:text="Nama Lengkap"
        android:textAppearance="@style/form" />

    <EditText
        android:id="@+id/edt_nama_lengkap"
        android:layout_width="338dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/nama_lengkap"
        android:layout_marginLeft="58dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="58dp"
        android:inputType="textCapWords"
        android:textColor="#F5F5F5"
        android:backgroundTint="@android:color/white"
        android:textColorHint="@android:color/white"/>

    <TextView
        android:id="@+id/email_reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="58dp"
        android:layout_marginTop="232dp"
        android:fontFamily="@font/montserrat"
        android:gravity="top"
        android:text="Email"
        android:textAppearance="@style/form" />

    <EditText
        android:id="@+id/edt_email_reg"
        android:layout_width="338dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/email_reg"
        android:layout_marginLeft="58dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="58dp"
        android:inputType="textEmailAddress"
        android:textColor="#F5F5F5"
        android:backgroundTint="@android:color/white"
        android:textColorHint="@android:color/white"/>

    <TextView
        android:id="@+id/no_telp_reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="58dp"
        android:layout_marginTop="312dp"
        android:fontFamily="@font/montserrat"
        android:gravity="top"
        android:text="Nomer Telepon"
        android:textAppearance="@style/form" />

    <EditText
        android:id="@+id/edt_notelp_reg"
        android:layout_width="338dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/no_telp_reg"
        android:layout_marginLeft="58dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="58dp"
        android:inputType="textPhonetic"
        android:textColor="#F5F5F5"
        android:backgroundTint="@android:color/white"
        android:textColorHint="@android:color/white"/>

    <TextView
        android:id="@+id/password_reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="58dp"
        android:layout_marginTop="392dp"
        android:fontFamily="@font/montserrat"
        android:gravity="top"
        android:text="Password"
        android:textAppearance="@style/form" />

    <EditText
        android:id="@+id/edt_pass_reg"
        android:layout_width="338dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/password_reg"
        android:layout_marginLeft="58dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="58dp"
        android:textColor="#F5F5F5"
        android:inputType="textPassword"
        android:backgroundTint="@android:color/white"
        android:textColorHint="@android:color/white"/>

    <TextView
        android:id="@+id/verify_reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="58dp"
        android:layout_marginTop="472dp"
        android:fontFamily="@font/montserrat"
        android:gravity="top"
        android:text="Verify Data"
        android:textAppearance="@style/form" />

    <TextView
        android:id="@+id/describe_verify_reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="58dp"
        android:layout_marginRight="58dp"
        android:layout_marginTop="500dp"
        android:fontFamily="@font/montserrat"
        android:gravity="top"
        android:text="Please upload your image of you holding your ID next to your face . (Available format .pdf) "
        android:textColor="@android:color/white"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/upload_file_reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="58dp"
        android:layout_marginTop="550dp"
        android:layout_marginRight="58dp"
        android:fontFamily="@font/montserrat"
        android:gravity="top"
        android:text="Upload File"
        android:textColor="#D3E5FF"
        android:textSize="12sp" />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="220.79dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/upload_file_reg"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="610dp"
        android:background="@drawable/button_yellow"
        android:elevation="4dp"
        android:fontFamily="@font/montserrat"
        android:text="Register"
        android:textAllCaps="false"
        android:textColor="#3C3C3C"
        android:textSize="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/have_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="665dp"
            android:fontFamily="@font/montserrat"
            android:gravity="top"
            android:text="Have an account? "
            android:textAppearance="@style/don_t_have_" />

        <TextView
            android:id="@+id/to_sign_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="665dp"
            android:fontFamily="@font/montserrat"
            android:gravity="top"
            android:text="Sign In"
            android:textColor="#FEFFA8"
            android:textSize="12sp" />
    </LinearLayout>


</RelativeLayout>