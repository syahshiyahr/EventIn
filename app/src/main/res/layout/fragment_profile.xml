<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.profile.ProfileFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvprofile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="31dp"
        android:layout_marginLeft="31dp"
        android:fontFamily="@font/montserrat_bold"
        android:gravity="top"
        android:text="Profil"
        android:textAppearance="@style/tracking"/>

    <View
        android:id="@+id/line"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_below="@id/tvprofile"
        android:layout_marginLeft="31dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="31dp"
        android:background="#C7C7C7" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/foto_profil"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        app:civ_border_color="#fff"
        app:civ_border_width="2dp"
        android:layout_below="@+id/line"
        android:layout_marginTop="30dp"
        android:background="@drawable/profile_picture"/>

    <Button
        android:id="@+id/btn_add_event"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/foto_profil"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_blue"
        android:elevation="4dp"
        android:fontFamily="@font/montserrat"
        android:text="Add Event"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/name_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="38dp"
        android:text="Syahshiyah Rohidah"
        android:fontFamily="@font/montserrat_bold"
        android:layout_below="@id/btn_add_event"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/email_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="38dp"
        android:text="syahshiyahr@gmail.com"
        android:fontFamily="@font/montserrat"
        android:layout_below="@id/name_profile"/>

    <TextView
        android:id="@+id/no_telp_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="38dp"
        android:text="081347892289"
        android:layout_below="@id/email_profile"/>

    <TextView
        android:id="@+id/edt_profil"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/email_profile"
        android:layout_alignRight="@id/email_profile"
        android:layout_marginTop="-27dp"
        android:layout_marginRight="38dp"
        android:background="@drawable/ic_edit_black_24dp" />

    <View
        android:id="@+id/line2"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_below="@id/no_telp_profile"
        android:layout_marginLeft="31dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="31dp"
        android:background="#C7C7C7" />

    <TextView
        android:id="@+id/text_subscription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="38dp"
        android:text="Subscription"
        android:fontFamily="@font/montserrat"
        android:layout_below="@id/line2"
        android:layout_marginTop="20dp"/>

    <View
        android:id="@+id/line3"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_below="@id/text_subscription"
        android:layout_marginLeft="31dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="31dp"
        android:background="#C7C7C7" />

    <TextView
        android:id="@+id/text_history_event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="38dp"
        android:text="Your Event"
        android:fontFamily="@font/montserrat"
        android:layout_below="@id/line3"
        android:layout_marginTop="20dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_event_profile"
        android:layout_below="@id/text_history_event"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/item_event"/>

    <View
        android:id="@+id/line4"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_below="@id/rv_event_profile"
        android:layout_marginLeft="31dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="31dp"
        android:background="#C7C7C7" />

    <TextView
        android:id="@+id/log_out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="38dp"
        android:layout_marginBottom="20dp"
        android:text="Log Out"
        android:fontFamily="@font/montserrat"
        android:layout_below="@id/line4"
        android:textColor="@android:color/holo_red_dark"
        android:layout_marginTop="20dp"/>



        </RelativeLayout>


    </androidx.core.widget.NestedScrollView>



</RelativeLayout>